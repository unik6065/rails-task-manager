<div class ="border-bottom mb-2">
  <%= form_with model: @task do |f| %>
    <%= f.label :title, class: 'form-label mt-2' %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :details, class: 'form-label mt-4' %>
    <%= f.text_area :details, class: 'form-control' %>
    <%if @task.persisted?%>
      <div class='mt-4' >
        <%= f.check_box :completed, class: 'form-check-input' %>
        <%= f.label :completed, class: 'form-check-label' %>
      </div>
    <%end%>
    <%= f.submit class:'btn btn-primary d-block mt-2 mb-3' %>
  <% end %>
</div>
<%= render "link_back"%>
